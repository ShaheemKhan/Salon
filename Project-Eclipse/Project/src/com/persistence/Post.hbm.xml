<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

 
<hibernate-mapping>

    <class name="com.models.Post" table="POST" lazy="false">

         <!-- A 36 hex character is our surrogate key. It's automatically
            generated by Hibernate with the UUID pattern. -->
            
              
        <id name="postIdPrimarKey" type="string" unsaved-value="null" >
            <column name="POST_ID_PRIMARY_KEY" sql-type="char(36)" not-null="true" />
             <generator class="org.hibernate.id.UUIDGenerator"/>
        </id>

        <property name="title">
            <column name="TITLE" sql-type="tinytext" not-null="true"/>
        </property>
        
      	<property name="author">
            <column name="AUTHOR" sql-type="tinytext" not-null="true"/>
        </property>
        
        <property name="votes">
            <column name="VOTES" sql-type="integer" not-null="true"/>
        </property>
        
      	<property name="flags">
            <column name="FLAGS" sql-type="integer" not-null="true"/>
        </property>
       
     	<property name="timeCreated" type="timestamp">
            <column name="TIME_CREATED" sql-type="timestamp" not-null="true" />
        </property>
        
       	<property name="numberOfComments">
            <column name="NUMBER_OF_COMMENTS" sql-type="integer" not-null="true"/>
        </property>
        
       	<bag name="commentList" table="COMMENTS" lazy="false" cascade="all">
    		<key column="POST_ID_FK" not-null="true"/>
    		<one-to-many class="com.models.Comment"/>
		</bag>
		

    </class>

</hibernate-mapping>